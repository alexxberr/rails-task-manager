<h1>My tasks</h1>
<div>
  <% @tasks.each do |task| %>
    <div  class="form-check">
      <% if task.completed == false %>
          <input class="form-check-input" type="checkbox" value= "false" >
          <label class="form-check-label"><%= link_to task.title, task_path(task) %> . <%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, task_path(task), method: :delete, data: {confirm: "are you sure ?"} %>
          </label>
      <% else %>
          <input class="form-check-input" type="checkbox" value= "true" checked>
          <label class="form-check-label"><%= link_to task.title, task_path(task) %> . <%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, task_path(task), method: :delete, data: {confirm: "are you sure ?"} %>
          </label>
      <% end %>
    </div>
  <% end %>
</div>
<div class="link-back"><%= link_to "Add a new task", tasks_new_path %></div>


